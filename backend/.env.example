# Archivo de ejemplo para variables de entorno del backend

# Clave secreta de Django (genera una nueva con: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())')
SECRET_KEY=your-secret-key-here

# Modo debug (desactivar en producción)
DEBUG=True

# Base de datos
DATABASE_URL=sqlite:///db.sqlite3
# Para PostgreSQL: postgres://usuario:contraseña@localhost:5432/nombre_base_datos

# Hosts permitidos
ALLOWED_HOSTS=localhost,127.0.0.1

# Configuración de correo (opcional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=tu_correo@gmail.com
EMAIL_HOST_PASSWORD=tu_contraseña
EMAIL_USE_TLS=True

# Configuración de AWS S3 para archivos media (opcional)
AWS_ACCESS_KEY_ID=tu_access_key
AWS_SECRET_ACCESS_KEY=tu_secret_key
AWS_STORAGE_BUCKET_NAME=nombre_bucket